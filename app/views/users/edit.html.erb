<div class="edit-main">
  <h2>アカウント編集</h2>
  <% @user.errors.full_messages.each do |message| %>
  <div class="edit-form-error">
    <%= message %>
  </div>
  <% end %>
  <div class="form-heading">
    <div class="form-body">
      <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
        <label class="upload-img-btn">
          <input type="file" name="image" style="display:none">
          <img src="<%= "/user_images/#{@user.image_name}" %>">
        </label>
        <input name="name" placeholder="ユーザー名" value="<%= @user.name %>">
        <input name="email" placeholder="メールアドレス" value="<%= @user.email %>">
        <input type="password" placeholder="パスワード (半角英数字を含む8-12文字)" name="password" value="<%= @user.password %>"> 
        <button class="login-btn">保存</button>
      <% end %>
    </div>
  </div>
</div>