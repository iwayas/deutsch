<!DOCTYPE html>
<html>
  <head>
    <title>ドイツ語学習 Deutsch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  </head>
      <header>
      <div class="container">
        <div class="header-logo">
          <a href="/home">Deutsch</a>
        </div>
        <div class="header-right">
          <% if @current_user %>  
            <li class="user-top">
              <%= link_to("#{@current_user.name}さん", "/users/#{@current_user.id}") %>
            </li>
            <li class="logout-top">
              <%= link_to("ログアウト", "/logout", {method: "post"}) %>
            </li>
          <% else %>
            <a href="/about" class="about-top">Deutschとは</a>
            <a href="/signup" class="signup-top">新規登録</a>
            <a href="/login" class="login-top">ログイン</a>
          <% end %>
        </div>
      </div>
    </header>
  <body>
    <%= yield %>
  </body>
</html>
